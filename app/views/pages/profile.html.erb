<style>
	#sidebar {
		width:15%;
		height:100%;
		position: fixed;
		background:#333333;
		float:left;
		display:block;

	}

	#sidebar ul {
		width:100%;
		margin-top:30px;
	}

	#sidebar li {
		position: relative;
		left:-30px;
		color:white;
		font-size: 26px;
		width:100%;
		padding:10px;

	} #sidebar li:hover{
		background:#5E5F61;
	}

	#sidebar .sidebar-active {
		background:#292627;
	}


	.circle {
		border-radius: 50%;
		width: 100px;
		height: 100px;
		background:  url(http://placehold.it/300.png/09f/fff) no-repeat center center;
      	-webkit-background-size: cover;
    	-moz-background-size: cover;
      	-o-background-size: cover;
      	background-size: cover;
      	display:inline-block;
	}
	.userinfo{
		display:inline-block;
		padding: 30px;

	}

	.header-image {
		background:linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.7)),url(https://unsplash.imgix.net/photo-1416339442236-8ceb164046f8?q=75&fm=jpg&s=8eb83df8a744544977722717b1ea4d09) no-repeat center center fixed;
		-webkit-background-size: cover;
    	-moz-background-size: cover;
      	-o-background-size: cover;
      	background-size: cover;
      	padding:100px;
      	color:white;
	}

	ul li{
		display:inline-block;
	}

	.divider{
    width:100%;
    height:1px;
    background:#a7a9ab;
    margin-bottom:20px;
    }

      .mybutton{
    background:#f26271;
    color:white;
    border:none;
  }

  .card{
    width:30%;
    margin: 1%;

    display:inline-block;
  }

  .image{

    height:150px;
    width:90%;
    border-radius:5px;
    background:  url(https://ununsplash.imgix.net/photo-1416339426675-1f96fd81b653?fit=crop&fm=jpg&h=800&q=75&w=1050) no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    display:inline-block;
  }

  .tags{
    margin-bottom:5px;
  }




</style>

