<style>
	#sidebar {
		width:15%;
		height:100%;
		position: fixed;
		background:#333333;
		float:left;
		display:block;

	}

	#sidebar ul {
		width:100%;
		margin-top:30px;
	}

	#sidebar li {
		position: relative;
		left:-30px;
		color:white;
		font-size: 26px;
		width:100%;
		padding:10px;
		transition: all 1s linear 0s;
	} #sidebar li:hover{
		background:#5E5F61;
		transition: all 1s linear 0s;
	}

	#sidebar .sidebar-active {
		background:#292627;
	}


	.circle {
		border-radius: 50%;
		width: 100px;
		height: 100px;
		background:  url(http://placehold.it/300.png/09f/fff) no-repeat center center;
      	-webkit-background-size: cover;
    	-moz-background-size: cover;
      	-o-background-size: cover;
      	background-size: cover;
      	display:inline-block;
	}
	.userinfo{
		display:inline-block;
		padding: 30px;

	}

	.header-image {
		background:linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.7)),url(https://unsplash.imgix.net/photo-1416339442236-8ceb164046f8?q=75&fm=jpg&s=8eb83df8a744544977722717b1ea4d09) no-repeat center center fixed;
		-webkit-background-size: cover;
    	-moz-background-size: cover;
      	-o-background-size: cover;
      	background-size: cover;
      	padding:100px;
      	color:white;
	}

	ul li{
		display:inline-block;
	}

	.divider{
    width:100%;
    height:1px;
    background:#a7a9ab;
    margin-bottom:20px;
    }

      .mybutton{
    background:#f26271;
    color:white;
    border:none;
  }

  .card{
    width:30%;
    margin: 1%;

    display:inline-block;
  }

  .image{

    height:150px;
    width:100%;
    border-radius:5px;
    background:  url(https://ununsplash.imgix.net/photo-1416339426675-1f96fd81b653?fit=crop&fm=jpg&h=800&q=75&w=1050) no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    display:inline-block;
  }

  .tags{
    margin-bottom:5px;
  }


	.mybutton{
    background:#f26271;
    color:white;
    border:none;
    float:right;
  }

</style>

<div id="sidebar">
	<%= image_tag("logo-text.png", style:"max-height:80px; width:auto; z-index:999; margin:10px;") %>
	<div style="width:100%; height:2px; background:#2ABB9B"></div>
	<ul>
		<li><%= link_to "Dashboard", "http://localhost:3000/profile", style:"color:white; text-decoration:none"%></li>
		<li><%= link_to "Create a Project", "http://localhost:3000/projects/new", style:"color:white; text-decoration:none" %></li>
		<li><%= link_to "Find a Project", "http://localhost:3000/projects/", style:"color:white; text-decoration:none" %></li>
	</ul>
</div>

<header class="header-image">
	<div class="container">
		<div class="row" style="position:relative; ">
			<div class="col-md-6">
				<img class="img-circle" style="margin-top:-60px" src ="<%= current_user.profile_image %>">
				<div class="userinfo">
					<h1 class="username"><%= current_user.name %></h3>
					<h3 class="twitterhandle" style="margin-top:-5px">@<%= current_user.handle %></h5>
				</div>
			</div>
			<div class="col-md-6">
				<div class="skills">
					<h3>Core skills</h3>
					<div id="core-skills">
						<span class="label label-primary">Graphic Design</span>
						<span class="label label-primary">Spanish</span>
					</div>
				</div>
				<div class="skills">
					<h3>Developing skills</h3>
					<div id="dev-skills">
						<span class="label label-warning">iOS Development</span>
						<span class="label label-warning">Photography</span
					</div>
				</div>
				<div id="badges">
				</div>
			</div>
		</div>
	</div>
</header>

