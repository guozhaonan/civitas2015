
<style>
  .circle {
    border-radius: 50%;
    width: 100px;
    height: 100px;
    background:  url(http://placehold.it/300.png/09f/fff) no-repeat center center fixed;
        -webkit-background-size: cover;
      -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        display:inline-block;
  }
  .projectinfo{
    display:inline-block;
    padding: 30px;

  }

  .image {
    background:linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.7)),url(https://unsplash.imgix.net/photo-1416339442236-8ceb164046f8?q=75&fm=jpg&s=8eb83df8a744544977722717b1ea4d09) no-repeat center center fixed;
    -webkit-background-size: cover;
      -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        padding:100px;
        color:white;
  }
  .divider{
    width:100%;
    height:1px;
    background:#a7a9ab;
    margin-bottom:20px;
  }



</style>




<header class="image">
  <div class="container">
    <div class="row" style="position:relative; ">
      <div class="col-md-6">
        <div class="circle" ></div>
        <div class="projectinfo">
          <h3 id="projectname"><%= @project.title %></h3>
          <h5 id="projecttags">#thistag #thattag</h5>
        </div>
      </div>
      <div class="col-md-6">
        <div class="skills">
          <h3>Core skills</h3>
          <div id="core-skills">
            <span class="label label-primary">Primary</span>
            <span class="label label-primary">Primary</span>
          </div>
        </div>
        <div class="skills">
          <h3>Developing skills</h3>
          <div id="dev-skills">
            <span class="label label-warning">Warning</span>
          </div>
        </div>
        <div id="badges">
        </div>
      </div>
    </div>
  </div>
</header>

<section id="project">
  <div class="container">
    <h2 style="padding-top:30px">Project Description</h2>
    <div class="divider"></div>
    <p id="description">
      <%= @project.description %>
    </p>

    <h2 style="padding-top:30px">Task List</h2>
    <div class="divider"></div>
    <p id="tasklist">
      <table class="table table-hover">
        <tr class="active">
          <td>Assigned</td>
          <td>Task</td>
          <td>Skill</td>
          <td></td>
        </tr>
        <tr>
          <td>Derp McDerpsome</td>
          <td>Herping the derp</td>
          <td>Derping</td>
          <td><input type="checkbox" checked></td>
        </tr>
        <tr>
          <td>Derp McDerpsome</td>
          <td>Herping the derp</td>
          <td>Derping</td>
          <td><input type="checkbox" checked></td>
        </tr>
        <tr>
          <td>Derp McDerpsome</td>
          <td>Herping the derp</td>
          <td>Derping</td>
          <td><input type="checkbox" checked></td>
        </tr>

      </table>
    </p>

    <h2 style="padding-top:30px">Key Stats</h2>
    <div class="divider"></div>
    <div id="stats">
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
          60%
        </div>
      </div>

    </div>
  </div>

  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Back', projects_path %>


</section>
